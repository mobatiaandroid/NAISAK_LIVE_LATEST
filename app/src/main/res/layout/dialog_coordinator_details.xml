<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sendEmailDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/dialoguetopcurve"
                android:gravity="center"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/b"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:scaleType="fitCenter" />

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/iconImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/round"
                android:scaleType="center"
                android:src="@drawable/infoicon"
                app:siBorderColor="#A0DAE5"
                app:siBorderWidth="1dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r"
            android:background="@drawable/dialoguebottomcurve"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/stud_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/coordinatorNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/section"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Contact Details"
                    android:visibility="visible" />


            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/stud_linear"
                android:background="@drawable/list_divider" />

            <LinearLayout
                android:id="@+id/linear_parentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:weightSum="1">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    android:text="Email" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_parentMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_parentName"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:weightSum="1">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    android:text="Phone Number" />

                <com.nas.naisak.customviews.edittext.CustomFontEditTextBoldNoColor
                    android:id="@+id/phoneContactEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/teal_outline"
                    android:editable="false"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_Enrollstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_parentMail"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:weightSum="1">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    android:text="Email ID" />

                <com.nas.naisak.customviews.edittext.CustomFontEditTextBoldNoColor
                    android:id="@+id/emailContactEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/teal_outline"
                    android:editable="false"
                    android:padding="8dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/whatsappContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_parentMail"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:weightSum="1">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    android:text="Whatsapp Contact" />

                <com.nas.naisak.customviews.edittext.CustomFontEditTextBoldNoColor
                    android:id="@+id/whatsappContactEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/teal_outline"
                    android:editable="false"
                    android:padding="8dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey1" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>