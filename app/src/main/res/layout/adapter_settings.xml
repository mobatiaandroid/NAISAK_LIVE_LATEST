<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/transparent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/term_button_bg"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:id="@+id/relativeheader"
            android:background="@color/list_bg">

            <RelativeLayout
                android:id="@+id/relSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >
                <ImageView
                    android:id="@+id/arrowImgarab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:background="@drawable/arrow_list" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical">
                    <com.nas.naisak.customviews.textview.CustomFontTextViewRegularWhite
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="set"
                        android:id="@+id/listTxtTitle"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <com.nas.naisak.customviews.textview.CustomFontTextViewRegularWhite
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="set"
                        android:id="@+id/txtUser"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:visibility="visible"/>
                </LinearLayout>
                <!--<com.nas.naisak.customviews.textview.CustomFontTextViewRegularWhite
                    android:id="@+id/listTxtTitle"
                    style="@style/textstyleblack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrowImg"
                    android:layout_alignParentLeft="true"
                    />-->



                <ImageView
                    android:id="@+id/arrowImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow_list" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>