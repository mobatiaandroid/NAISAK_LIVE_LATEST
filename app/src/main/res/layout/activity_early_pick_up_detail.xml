<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/relative_logo_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/titlebar" />

        <ImageView
            android:id="@+id/logoClickImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/heading"
            android:layout_alignTop="@+id/relative_logo_header"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logotransperent" />

        <RelativeLayout
            android:id="@+id/bottomRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/heading"
            android:layout_alignParentTop="true">


            <RelativeLayout
                android:id="@+id/backRelative"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/btn_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back"
                    android:visibility="visible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />
        </RelativeLayout>

        <com.nas.naisak.customviews.textview.CustomFontDJ5TextWhite
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/relative_logo_header"
            android:background="@color/split_bg"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/early_pickup_details"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/btn_info"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/heading"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/infoptaicon"
            android:visibility="invisible" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/namelayout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/stName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/black" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/stnameValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="Gayathri"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/namelayoutArab"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">
                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/stnameValueArab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="Gayathri"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/black" />
                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/stNameArab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/studClassLinear"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/studClassTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="@string/class_text"

                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/black" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/studClassValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="X1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/studClassLinearArab"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">
                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/studClassValueArab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="X1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/black" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/studClassTextViewArab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="@string/class_text"

                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fromlayout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/leaveDateFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="@string/day_of_pickup"

                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/black" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/leaveDateFromValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="12/06/2017"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fromlayoutArab"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/leaveDateFromValueArab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="12/06/2017"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/black" />
                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/leaveDateFromArab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="@string/day_of_pickup"

                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/tolayout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/leaveDateTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="Time of Pickup"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/black" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/leaveDateToValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="12/06/2017"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pickuplayout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/pickuptitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="@string/pickup_at"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/black" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/pickupbyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="12/06/2017"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pickuplayoutArab"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/pickupbyNameArab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="12/06/2017"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/black" />
                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/pickuptitleArab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="@string/pickup_at"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/statuslayout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/statustitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="@string/status"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/black" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="12/06/2017"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/statusLayoutarab"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/statusArab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50"
                    android:text="12/06/2017"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/black" />
                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/statustitleArab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="@string/status"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/reasonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="45"
                    android:singleLine="true"
                    android:text="@string/reason_for_early_pickup"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text=""
                    android:textColor="@color/black" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_grey">

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/reasonValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="4dp"
                    android:padding="10dp"
                    android:singleLine="false"
                    android:text="reason"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </ScrollView>

            <LinearLayout
                android:id="@+id/reasonRejectlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
                    android:id="@+id/reasonReject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="45"
                    android:text="@string/reason_for_rejection"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/colon"
                    android:textColor="@color/black" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/reasonRejectionScroll"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_grey">

                <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
                    android:id="@+id/reasonRejectValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="4dp"
                    android:padding="10dp"
                    android:singleLine="false"
                    android:text="reason"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </ScrollView>


        </LinearLayout>

    </ScrollView>
</LinearLayout>