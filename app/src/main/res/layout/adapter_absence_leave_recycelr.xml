<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listBackGround"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/realMain"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.nas.naisak.customviews.textview.CustomFontTextViewRegularBlack
            android:id="@+id/listDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/listStatus"
            android:gravity="center|left"
            android:text="12/05/2017-13/05/2017"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.nas.naisak.customviews.textview.CustomFontTextViewSemiBoldBlack
            android:id="@+id/listStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/arrowImg"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="Pending"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/arrowImg"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/realMain"
        android:background="@color/split_bg" />
</RelativeLayout>